    function createRAC(){
      console.log(createModalCache)
      alert('MT-RAC Created!')
      const data = createModalCache;
      postData('/createrac/'+username,data)
      .then((data) => {
        table.ajax.reload();
        console.log("data sent:",data);
      });
      
      
    }
    
